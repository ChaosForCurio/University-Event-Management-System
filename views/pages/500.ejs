<div class="flex flex-col items-center justify-center py-20 bg-white rounded-3xl border border-dashed border-red-300">
    <div class="bg-red-50 w-24 h-24 rounded-full flex items-center justify-center mb-6">
        <i data-lucide="alert-triangle" class="text-red-400 w-12 h-12"></i>
    </div>
    <h1 class="text-4xl font-black text-slate-900 mb-2">500</h1>
    <p class="text-xl font-bold text-slate-800 mb-4">Something went wrong at the backend</p>
    <p class="text-slate-500 mb-8 max-w-md text-center">
        <%= message %>
    </p>
    <div class="flex gap-4">
        <button onclick="window.location.reload()"
            class="bg-slate-100 text-slate-700 px-8 py-3 rounded-xl font-bold hover:bg-slate-200 transition-colors">Try
            Again</button>
        <a href="/"
            class="bg-indigo-600 text-white px-8 py-3 rounded-xl font-bold hover:bg-indigo-700 transition-colors shadow-lg">Back
            to Home</a>
    </div>

    <% if (error && error.stack) { %>
        <div class="mt-12 p-6 bg-slate-50 border border-slate-200 rounded-2xl w-full text-left overflow-auto max-h-64">
            <pre class="text-xs text-slate-500 font-mono"><%= error.stack %></pre>
        </div>
        <% } %>
</div>