<!-- Hero Section -->
<div class="mb-12 relative overflow-hidden rounded-3xl bg-slate-900 text-white p-8 md:p-12">
    <div class="relative z-10 max-w-2xl">
        <span
            class="bg-indigo-500/20 text-indigo-300 px-3 py-1 rounded-full text-sm font-semibold mb-4 inline-block border border-indigo-500/30">Upcoming
            Spotlight</span>
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Annual Tech Symposium 2024</h1>
        <p class="text-slate-300 text-lg mb-8 leading-relaxed">Join world-class speakers and industry leaders for three
            days of innovation, networking, and workshops.</p>
        <div class="flex flex-wrap gap-4">
            <button onclick="document.getElementById('event-feed')?.scrollIntoView({behavior: 'smooth'})"
                class="bg-white text-slate-900 px-6 py-3 rounded-xl font-bold hover:bg-slate-100 transition-colors shadow-lg">Discover
                Events</button>
            <a href="/dashboard"
                class="bg-white/10 backdrop-blur-sm text-white px-6 py-3 rounded-xl font-bold border border-white/20 hover:bg-white/20 transition-colors">Go
                to Dashboard</a>
        </div>
    </div>
    <div class="absolute top-0 right-0 w-1/3 h-full opacity-20 pointer-events-none">
        <i data-lucide="cpu" class="w-64 h-64 text-white -mr-12 -mt-12 transform rotate-12"></i>
    </div>
</div>

<!-- Filters & Search Bar -->
<div id="event-feed" class="flex flex-col md:flex-row gap-4 mb-8 items-center justify-between">
    <div class="relative w-full md:w-96">
        <i data-lucide="search" class="absolute left-3 top-1/2 -translate-y-1/2 text-slate-400 w-5 h-5"></i>
        <input type="text" name="search" value="<%= searchQuery %>" placeholder="Search events, clubs, or venues..."
            hx-get="/" hx-trigger="keyup changed delay:500ms, search" hx-target="#event-grid"
            hx-indicator=".search-indicator" hx-push-url="true"
            class="w-full pl-10 pr-4 py-3 bg-white border border-slate-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent outline-none transition-all">
        <span class="search-indicator htmx-indicator absolute right-3 top-1/2 -translate-y-1/2">
            <i data-lucide="loader-2" class="animate-spin text-indigo-600 w-5 h-5"></i>
        </span>
    </div>

    <div class="flex gap-2 w-full md:w-auto overflow-x-auto pb-2 md:pb-0 custom-scrollbar">
        <% categories.forEach(cat=> { %>
            <button hx-get="/?category=<%= cat %>" hx-target="#event-grid" hx-push-url="true"
                class="<%= selectedCategory === cat ? 'bg-indigo-600 text-white' : 'bg-white text-slate-600 hover:border-indigo-300' %> px-5 py-2 rounded-full border border-slate-200 text-sm font-medium whitespace-nowrap transition-all">
                <%= cat %>
            </button>
            <% }) %>
    </div>
</div>

<!-- Event Grid -->
<div id="event-grid">
    <%- include('../partials/event-grid', { events, rsvps }) %>
</div>