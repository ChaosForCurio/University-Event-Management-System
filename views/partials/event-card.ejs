<div id="event-<%= event.id %>"
    class="event-card bg-white rounded-2xl border border-slate-200 overflow-hidden shadow-sm hover:shadow-xl transition-all h-full flex flex-col">
    <div class="h-48 bg-slate-200 relative">
        <img src="<%= event.image %>" class="w-full h-full object-cover" alt="<%= event.title %>">
        <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-md px-3 py-1 rounded-lg shadow-sm">
            <span class="text-xs font-bold text-indigo-600">
                <%= event.date %>
            </span>
        </div>
        <div class="absolute bottom-4 left-4">
            <span class="px-2 py-1 bg-indigo-600 text-white text-xs font-bold rounded uppercase tracking-wider">
                <%= event.category %>
            </span>
        </div>
    </div>
    <div class="p-6 flex-1 flex flex-col">
        <h3 class="text-xl font-bold mb-2 group-hover:text-indigo-600 transition-colors">
            <%= event.title %>
        </h3>
        <div class="flex items-center text-slate-500 text-sm mb-4">
            <i data-lucide="map-pin" class="w-4 h-4 mr-1"></i>
            <span>
                <%= event.location %>
            </span>
        </div>
        <p class="text-slate-600 text-sm mb-6 line-clamp-2">
            <%= event.description %>
        </p>
        <div class="flex items-center justify-between mt-auto">
            <div class="flex -space-x-2">
                <% for(let i=1; i<=3; i++) { %>
                    <div class="w-8 h-8 rounded-full border-2 border-white bg-slate-200 overflow-hidden">
                        <img src="https://i.pravatar.cc/100?u=<%= event.id + i %>" alt="Avatar">
                    </div>
                    <% } %>
                        <div
                            class="w-8 h-8 rounded-full border-2 border-white bg-slate-100 flex items-center justify-center text-[10px] font-bold text-slate-500">
                            +<span>
                                <%= event.attendees %>
                            </span>
                        </div>
            </div>
            <button hx-post="/htmx/rsvp/<%= event.id %>" hx-target="#event-<%= event.id %>" hx-swap="outerHTML"
                class="<%= isRSVPed ? 'bg-emerald-100 text-emerald-700 border-emerald-200' : 'bg-slate-50 text-slate-700 border-slate-200 hover:bg-indigo-50 hover:text-indigo-600 hover:border-indigo-200' %> px-4 py-2 rounded-lg border text-xs font-bold transition-all">
                <span>
                    <%= isRSVPed ? 'Registered' : 'RSVP Now' %>
                </span>
            </button>
        </div>
    </div>
</div>