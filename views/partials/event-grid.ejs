<div id="event-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
    <% if (events.length===0) { %>
        <div class="col-span-full text-center py-20 bg-white rounded-3xl border border-dashed border-slate-300">
            <div class="bg-slate-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                <i data-lucide="calendar-x" class="text-slate-400 w-8 h-8"></i>
            </div>
            <h3 class="text-xl font-bold text-slate-800">No events found</h3>
            <p class="text-slate-500">Try adjusting your filters or search terms.</p>
        </div>
        <% } else { %>
            <% events.forEach(event=> { %>
                <%- include('event-card', { event, isRSVPed: rsvps.includes(event.id) }) %>
                    <% }) %>
                        <% } %>
</div>